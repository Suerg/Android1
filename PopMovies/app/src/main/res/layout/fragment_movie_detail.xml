<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.example.suerg.popmovies.MovieDetailActivityFragment"
                tools:showIn="@layout/activity_movie_detail">

    <TextView
        android:id="@+id/textview_movie_detail_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:textSize="32dp"
        android:background="#009688"
        android:textColor="@android:color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"/>

    <ImageView
        android:layout_marginTop="-30dp"
        android:layout_below="@id/textview_movie_detail_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="40dp"
        android:id="@+id/imageview_poster_movie_detail"
        android:layout_width="150dp"
        android:layout_height="300dp"/>

    <TextView
        android:layout_below="@id/textview_movie_detail_title"
        android:layout_toRightOf="@id/imageview_poster_movie_detail"
        android:id="@+id/textview_movie_detail_year"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="30dp"/>

    <TextView
        android:textSize="30dp"
        android:layout_margin="20dp"
        android:layout_toRightOf="@id/imageview_poster_movie_detail"
        android:layout_below="@id/textview_movie_detail_year"
        android:id="@+id/textview_movie_detail_runtime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:textSize="30dp"
        android:layout_below="@id/textview_movie_detail_runtime"
        android:layout_toRightOf="@id/imageview_poster_movie_detail"
        android:id="@+id/textview_movie_detail_rating"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
